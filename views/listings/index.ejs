<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: nowrap; /* prevent wrapping */
    overflow-x: auto; /* enable horizontal scroll */
    white-space: nowrap;
    align-items: center;
    padding: 1rem 0;
    gap: 1.5rem; /* gives space between filters */
    scroll-behavior: smooth;
    scrollbar-width: none; /* optional for Firefox */
    -webkit-overflow-scrolling: touch; /* smooth scrolling on iOS */
  }

  #filters::-webkit-scrollbar {
    display: none; /* Hide scrollbar in Chrome/Safari */
  }

  .filter-scroll-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 1rem 0;
    padding: 0 2rem;
    transition: margin-top 0.3s ease;
  }

  .filters-container {
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    flex: 1;
  }

  .filters-container::-webkit-scrollbar {
    display: none;
  }

  .scroll-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: white;
    border: 1px solid #ccc;
    border-radius: 50%;
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10;
    cursor: pointer;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
  }

  .scroll-btn.left {
    left: 0.5rem;
    right: auto;
    margin: 0;
  }

  .scroll-btn.right {
    right: 0.5rem;
    left: auto;
    margin: 0;
  }

  .scroll-btn.hidden {
    display: none;
  }

  .filter {
    flex: 0 0 auto;
    text-align: center;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .filter a {
    color: inherit;
    text-decoration: none;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
  }

  #switchCheckDefault {
    cursor: pointer;
  }
  .filter.active {
    border-bottom: 2px solid #000;
    font-weight: bold;
    opacity: 1;
  }
</style>

<div class="filter-scroll-wrapper">
  <button class="scroll-btn left" onclick="scrollFilters('left')">
    <i class="fa-solid fa-chevron-left"></i>
  </button>
  <div class="filters-container">
    <div id="filters">
      <div class="filter <%= category === 'Trending' ? 'active' : '' %>">
        <a href="/listings?category=Trending">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </a>
      </div>
      <div class="filter <%= category === 'Rooms' ? 'active' : '' %>">
        <a href="/listings?category=Rooms">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </a>
      </div>
      <div class="filter <%= category === 'Iconic Cities' ? 'active' : '' %>">
        <a href="/listings?category=Iconic Cities">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic Cities</p>
        </a>
      </div>
      <div class="filter <%= category === 'Mountains' ? 'active' : '' %>">
        <a href="/listings?category=Mountains">
          <div><i class="fa-solid fa-mountain-sun"></i></div>
          <p>Mountains</p>
        </a>
      </div>
      <div class="filter <%= category === 'Castles' ? 'active' : '' %>">
        <a href="/listings?category=Castles">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
        </a>
      </div>
      <div class="filter <%= category === 'Amazing Pools' ? 'active' : '' %>">
        <a href="/listings?category=Amazing Pools">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </a>
      </div>
      <div class="filter <%= category === 'Camping' ? 'active' : '' %>">
        <a href="/listings?category=Camping">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </a>
      </div>
      <div class="filter <%= category === 'Arctic' ? 'active' : '' %>">
        <a href="/listings?category=Arctic">
          <div><i class="fa-solid fa-snowman"></i></div>
          <p>Arctic</p>
        </a>
      </div>
      <div class="filter <%= category === 'Beach' ? 'active' : '' %>">
        <a href="/listings?category=Beach">
          <div><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>Beach</p>
        </a>
      </div>
      <div class="filter <%= category === 'Domes' ? 'active' : '' %>">
        <a href="/listings?category=Domes">
          <div><i class="fa-solid fa-igloo"></i></div>
          <p>Domes</p>
        </a>
      </div>
      <div class="filter <%= category === 'Villa' ? 'active' : '' %>">
        <a href="/listings?category=Villa">
          <div><i class="fa-solid fa-house"></i></div>
          <p>Villa</p>
        </a>
      </div>
      <div class="filter <%= category === 'Ferry' ? 'active' : '' %>">
        <a href="/listings?category=Ferry">
          <div><i class="fa-solid fa-ferry"></i></div>
          <p>Ferry</p>
        </a>
      </div>
      <div class="filter <%= category === 'Farm' ? 'active' : '' %>">
        <a href="/listings?category=Farm">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farm</p>
        </a>
      </div>

      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input
            class="form-check-input"
            type="checkbox"
            role="switch"
            id="switchCheckDefault"
          />
          <label class="form-check-label" for="switchCheckDefault">
            Display total after taxes
          </label>
        </div>
      </div>
    </div>
  </div>

  <button class="scroll-btn right" onclick="scrollFilters('right')">
    <i class="fa-solid fa-chevron-right"></i>
  </button>
</div>

<% if (category && category !== "All") { %>
<h5 class="mt-4">
  Showing listings for category: <strong><%= category %></strong>
</h5>
<% } %>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <%for(let listing of allListings){%>
  <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          <i class="tax-info"> &nbsp; + 18% GST</i> <br />
          <%= listing.location %>, <%= listing.country %>
        </p>
      </div>
    </div>
  </a>
  <%}%>
</div>

<script>
  // Tax toggle logic
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });

  // Scroll filters logic
  function scrollFilters(direction) {
    const filterWrapper = document.getElementById("filters");
    const scrollAmount = 200;

    if (direction === "left") {
      filterWrapper.scrollBy({ left: -scrollAmount, behavior: "smooth" });
    } else {
      filterWrapper.scrollBy({ left: scrollAmount, behavior: "smooth" });
    }
  }

  function updateScrollButtons() {
    const container = document.getElementById("filters");
    const leftBtn = document.querySelector(".scroll-btn.left");
    const rightBtn = document.querySelector(".scroll-btn.right");

    const maxScrollLeft = container.scrollWidth - container.clientWidth;

    if (container.scrollLeft <= 0) {
      leftBtn.classList.add("hidden");
    } else {
      leftBtn.classList.remove("hidden");
    }

    if (container.scrollLeft >= maxScrollLeft - 1) {
      rightBtn.classList.add("hidden");
    } else {
      rightBtn.classList.remove("hidden");
    }
  }

  document.addEventListener("DOMContentLoaded", () => {
    const container = document.getElementById("filters");

    updateScrollButtons();

    container.addEventListener("scroll", updateScrollButtons);
    window.addEventListener("resize", updateScrollButtons);
  });
</script>
