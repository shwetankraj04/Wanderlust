<% layout("/layouts/boilerplate") %>

<div class="filter-scroll-wrapper">
  <button class="scroll-btn left" onclick="scrollFilters('left')">
    <i class="fa-solid fa-chevron-left"></i>
  </button>
  <div class="filters-container">
    <div id="filters">
      <div class="filter <%= category === 'Trending' ? 'active' : '' %>">
        <a href="/listings?category=Trending">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </a>
      </div>
      <div class="filter <%= category === 'Rooms' ? 'active' : '' %>">
        <a href="/listings?category=Rooms">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </a>
      </div>
      <div class="filter <%= category === 'Iconic Cities' ? 'active' : '' %>">
        <a href="/listings?category=Iconic Cities">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic Cities</p>
        </a>
      </div>
      <div class="filter <%= category === 'Mountains' ? 'active' : '' %>">
        <a href="/listings?category=Mountains">
          <div><i class="fa-solid fa-mountain-sun"></i></div>
          <p>Mountains</p>
        </a>
      </div>
      <div class="filter <%= category === 'Castles' ? 'active' : '' %>">
        <a href="/listings?category=Castles">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
        </a>
      </div>
      <div class="filter <%= category === 'Amazing Pools' ? 'active' : '' %>">
        <a href="/listings?category=Amazing Pools">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </a>
      </div>
      <div class="filter <%= category === 'Camping' ? 'active' : '' %>">
        <a href="/listings?category=Camping">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </a>
      </div>
      <div class="filter <%= category === 'Arctic' ? 'active' : '' %>">
        <a href="/listings?category=Arctic">
          <div><i class="fa-solid fa-snowman"></i></div>
          <p>Arctic</p>
        </a>
      </div>
      <div class="filter <%= category === 'Beach' ? 'active' : '' %>">
        <a href="/listings?category=Beach">
          <div><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>Beach</p>
        </a>
      </div>
      <div class="filter <%= category === 'Domes' ? 'active' : '' %>">
        <a href="/listings?category=Domes">
          <div><i class="fa-solid fa-igloo"></i></div>
          <p>Domes</p>
        </a>
      </div>
      <div class="filter <%= category === 'Villa' ? 'active' : '' %>">
        <a href="/listings?category=Villa">
          <div><i class="fa-solid fa-house"></i></div>
          <p>Villa</p>
        </a>
      </div>
      <div class="filter <%= category === 'Ferry' ? 'active' : '' %>">
        <a href="/listings?category=Ferry">
          <div><i class="fa-solid fa-ferry"></i></div>
          <p>Ferry</p>
        </a>
      </div>
      <div class="filter <%= category === 'Farm' ? 'active' : '' %>">
        <a href="/listings?category=Farm">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farm</p>
        </a>
      </div>

      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input
            class="form-check-input"
            type="checkbox"
            role="switch"
            id="switchCheckDefault"
          />
          <label class="form-check-label" for="switchCheckDefault">
            Display total after taxes
          </label>
        </div>
      </div>
    </div>
  </div>

  <button class="scroll-btn right" onclick="scrollFilters('right')">
    <i class="fa-solid fa-chevron-right"></i>
  </button>
</div>

<% if (category && category !== "All") { %>
<h5 class="mt-4">
  Showing listings for category: <strong><%= category %></strong>
</h5>
<% } %>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <%for(let listing of allListings){%>
  <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          <i class="tax-info"> &nbsp; + 18% GST</i> <br />
          <%= listing.location %>, <%= listing.country %>
        </p>
      </div>
    </div>
  </a>
  <%}%>
</div>
