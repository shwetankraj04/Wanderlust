<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3 mb-3">SignUp on WanderLust</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">username looks good!</div>
        <div class="invalid-feedback">Enter a username!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter a email!</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">password looks good!</div>
        <div class="invalid-feedback">Enter a password!</div>
      </div>
      <button class="btn btn-success">SignUp</button>
    </form>
  </div>
</div>
